@model CharacterCreatorMvc.Application.DTOs.CharacterDTO

<h3>Edit Character</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Damage" class="control-label"></label>
                <input asp-for="Damage" class="form-control" />
                <span asp-validation-for="Damage" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HealthPoints" class="control-label"></label>
                <input asp-for="HealthPoints" class="form-control" />
                <span asp-validation-for="HealthPoints" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CharacterTypeId" class="control-label"></label>
                <select asp-for="CharacterTypeId" class="form-control" asp-items="ViewBag.CharacterTypeId"></select>
                <span asp-validation-for="CharacterTypeId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>